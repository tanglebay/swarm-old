                        unset beePeerPort
                        unset beePeerId
                    ;;
                    "2)")
                        currentBeePeerAlias="$beePeerAlias5"
                        beePeerAlias=$(whiptail --inputbox "\nPlease enter a alias for \"peer $beePeerNumber\" or select cancel" 10 65 $currentBeePeerAlias --title "Bee - Peer $beePeerNumber" 3>&1 1>&2 2>&3)
                        exitStatus=$?
